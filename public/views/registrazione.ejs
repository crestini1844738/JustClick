        <div class="leftcolumn">
            <div class="text-center">
              <form action="http://localhost:8889/register/auth" class="form-Register"  method="post" name="registration" onsubmit="return formValidationRegister()">
                    <div class="form-inner">
                     <h3>Registrazione</h3> 
                     <hr id="linea">
                     <% if (errormessage) { %>
                      <% switch (errormessage.err) { 
                        case 'ERR' : %>
                        
                            <p class="alert alert-danger mt-4"> 
                              <strong>Ops!</strong> <%= errormessage.msg%>
                            </p>
                            <% break;
                        case 'OK' : %>
                           
                            <p class="alert alert-success mt-4">
                            
                            <strong>Well done!</strong> <%= errormessage.msg%> 
                            <br>
                            <a href="http://localhost:8889/login">Vai al login!</a>
                            </p>
                            <% break;
                        } %>
                      <% } %>
                      
                        <label for="Username">Username*</label>
                        <input type="text" name="Username" placeholder="6-15 caratteri"  required />
                        <label for="Name">Nome*</label>
                        <input type="text" name="Name"   required/>
                        <label for="Surname">Cognome*</label>
                        <input type="text" name="Surname"  required/>
                        <label for="Date">Data di nascita*</label>
                        <input type="date" name="Date" placeholder="mm/dd/yyyy"  required/>
                        <label for="Email">E-mail*</label>
                        <input type="email" name="Email"  placeholder="123@prova.it" required/>
                        <label for="Password">Password*</label>
                        <input type="password" name="Password" placeholder="Utilizzare lettere maiuscole,minuscole e numeri"  required/>
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                          <label class="form-check-label" for="defaultCheck1">
                            Con la seguente si accettano i termini e condizioni.
                          </label>
                        </div>
                        <input type="submit" value="Inviare">
                        <pippo>Sei gi√† registrato? <a href="http://localhost:8889/login">Accedi</a></pippo>
                      
                      
